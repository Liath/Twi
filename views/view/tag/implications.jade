extends base
include ../../includes/utility

block append head
    style(type="text/css")
        #body form fieldset {
            width:500px;
        }
        #body form label {
            color:white;
        }
        #body .table tr td:first-child , #body .table tr th:first-child {
            text-align:center;
            width:20px;
        }
        .tagC {
            float:none;
            margin-left:3px;
        }

block nav
    mixin tagnav('tag/implications/')

block body
    form.form-horizontal(method="get", action="/tag/implications/")
        .input-append
            input#name(type="text", name="q")
            button.btn.btn-primary(type="submit") Search

    table.table.table-striped.table-bordered.table-condensed
        thead
            tr
                th &nbsp;
                th Predicate
                th Consequent
                th Reason
        tbody
            - each item in implications
                tr
                    td &nbsp;
                    td
                        mixin linkTag(item.f)
                        span.tagC.badge.badge-info #{item.f.c}
                    td
                        mixin linkTag(item.t)
                        span.tagC.badge.badge-info #{item.t.c}
                    td #{item.r}